# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
indent_size = tab

# 2 space indentation for JSON and YAML files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
